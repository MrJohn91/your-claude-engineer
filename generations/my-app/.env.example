# ============================================================
# Outreach Scraping Toolkit - Environment Configuration
# ============================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ============================================================
# Apify API Configuration
# ============================================================
# Get your API key from: https://console.apify.com/account/integrations
# Optional for development (mock data will be used if not provided)
APIFY_API_KEY=your_apify_api_key_here

# ============================================================
# Google Sheets Configuration
# ============================================================
# Path to your Google service account JSON credentials file
# See SETUP_GUIDE.md for instructions on creating this file
GOOGLE_SHEETS_CREDENTIALS_PATH=./config/google-credentials.json

# Enable or disable Google Sheets export functionality
# Set to false if you don't want to use Google Sheets
GOOGLE_SHEETS_ENABLED=true

# ============================================================
# Backend Configuration
# ============================================================
# Host for the FastAPI backend server
# Use 0.0.0.0 to allow external access
# Use 127.0.0.1 for local-only access
BACKEND_HOST=0.0.0.0

# Port for the backend server
BACKEND_PORT=8000

# ============================================================
# Frontend Configuration
# ============================================================
# URL where the frontend is hosted (for CORS configuration)
# Update this if deploying to production
FRONTEND_URL=http://localhost:5173

# API URL for frontend to connect to backend
# This is typically used in frontend/.env.local
# VITE_API_URL=http://localhost:8000

# ============================================================
# Scraping Configuration
# ============================================================
# Maximum number of profiles to scrape per platform
# Higher numbers = longer scraping time and higher costs
# Start with lower values for testing
MAX_LINKEDIN_PROFILES=100
MAX_INSTAGRAM_PROFILES=100
MAX_TWITTER_PROFILES=100
MAX_TIKTOK_PROFILES=100
MAX_TELEGRAM_PROFILES=100

# Delay between scraping requests (in seconds)
# Higher delays = slower scraping but fewer blocks
# Recommended: 2-5 seconds for residential proxies, 5-10 for datacenter
RATE_LIMIT_DELAY=2

# ============================================================
# Logging Configuration
# ============================================================
# Log level for application logging
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Use DEBUG for development, WARNING or ERROR for production
LOG_LEVEL=INFO

# Log file path (optional)
# Leave empty to log only to console
# LOG_FILE=./logs/app.log

# ============================================================
# Database Configuration (Optional - Future Feature)
# ============================================================
# Currently using in-memory storage and Google Sheets
# Uncomment and configure if adding persistent database

# SQLite (simplest option)
# DATABASE_URL=sqlite:///./outreach_toolkit.db

# PostgreSQL (production option)
# DATABASE_URL=postgresql://user:password@localhost:5432/outreach_toolkit

# MongoDB (NoSQL option)
# MONGODB_URL=mongodb://localhost:27017/outreach_toolkit

# ============================================================
# Security Configuration (Optional - Future Feature)
# ============================================================
# API authentication (not currently implemented)
# API_KEY_ENABLED=false
# API_KEY=your_secret_api_key_here

# JWT secret for token-based auth (future feature)
# JWT_SECRET_KEY=your_jwt_secret_key_here
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION_MINUTES=30

# ============================================================
# Email Configuration (Optional - Future Feature)
# ============================================================
# For sending notifications about scraping job completion
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# EMAIL_FROM=noreply@yourdomain.com

# ============================================================
# Redis Configuration (Optional - Future Feature)
# ============================================================
# For caching and job queues
# REDIS_URL=redis://localhost:6379/0

# ============================================================
# Production Settings
# ============================================================
# Environment mode (development or production)
ENVIRONMENT=development

# Enable debug mode (should be false in production)
DEBUG=true

# Allowed CORS origins (comma-separated)
# In production, specify exact domains instead of "*"
# CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# ============================================================
# Cost Tracking (Optional - Future Feature)
# ============================================================
# Track actual costs vs estimates
# COST_TRACKING_ENABLED=false
# APIFY_USAGE_TRACKING=false

# ============================================================
# Webhook Configuration (Optional - Future Feature)
# ============================================================
# Webhook URL for job completion notifications
# WEBHOOK_URL=https://your-webhook-endpoint.com/notify

# ============================================================
# Notes
# ============================================================
# - Copy this file to .env: cp .env.example .env
# - Fill in your actual values (remove the _here placeholders)
# - Never commit .env to version control
# - See SETUP_GUIDE.md for detailed configuration instructions
# - Optional features are commented out and can be enabled as needed
